@model IEnumerable<ProjectManagement.Models.Project>

@{
    ViewData["Title"] = "Manage All Projects";
}

<h1>Manage all Projects </h1>

<p>
    <a a style="text-decoration:none" asp-controller="Project" asp-action="AddProject">Create a New Project</a>
  
</p>
<p>
      <a style="text-decoration:none" asp-action="AllUsers">See a list all Users</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description Project
            </th>
            <th>
                Date Start
            </th>
            <th>
               Deadline
            </th> 
            <th>
                 $@Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                 Priority
            </th>   
             <th>
            </th>
             <th>
                Actions
            </th>
             <th>   
             </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateBegin)
                </td>
                <td>
                 @Html.DisplayFor(modelItem => item.DateEnd)
                </td>
                <td>
                 @Html.DisplayFor(modelItem => item.Budget)
                </td>
                 <td>
                 @Html.DisplayFor(modelItem => item.ProjectPriority)
                </td>
               
                <td>
                    <a style="text-decoration:none" asp-controller="Project" asp-action="UpdateProject" asp-route-projectId="@item.Id">Update </a>
                </td>
                <td>
                    <a style="text-decoration:none" asp-controller="Project" asp-action="DeleteProject" asp-route-projectId="@item.Id">Delete</a>
                </td>
                <td>
                    <a style="text-decoration:none" asp-action="TasksProject" asp-route-projectId="@item.Id">Tasks List</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Home" asp-action="Index">Back home</a>
</p>



