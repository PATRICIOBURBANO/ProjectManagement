@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Add Project";
}

<h1>Add a New Project</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProject" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" name="name" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea type="text" name="content" asp-for="Content" class="form-control">
                </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input  required="required" type="number" name="Budget" asp-for="Budget" class="form-control" maxlength="15" min="1" max="100000"/>
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Days Deadline</label>
                <span class="text-danger"></span>
                <input type="number" required="required" name="days" maxlength="15" min="1" max="365" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="ProjectPriority" class="control-label">Priority</label>
                <select name="priority" asp-for="ProjectPriority" asp-items="Html.GetEnumSelectList<PriorityP>()" class="form-control" >Priority Project</select>
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="AllProjects">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}